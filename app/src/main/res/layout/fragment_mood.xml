<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header Section -->
        <TextView
            android:id="@+id/txtToday"
            android:text="Mood hôm nay"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#2C3E50"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" />

        <!-- My Mood Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMyMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Bạn cảm thấy thế nào?"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#34495E"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/emojiGroup"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/emojiHappy"
                        android:text="😊"
                        android:textSize="32sp"
                        android:layout_margin="8dp"
                        android:background="@drawable/mood_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <RadioButton
                        android:id="@+id/emojiNeutral"
                        android:text="😐"
                        android:textSize="32sp"
                        android:layout_margin="8dp"
                        android:background="@drawable/mood_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <RadioButton
                        android:id="@+id/emojiSad"
                        android:text="😢"
                        android:textSize="32sp"
                        android:layout_margin="8dp"
                        android:background="@drawable/mood_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <RadioButton
                        android:id="@+id/emojiAngry"
                        android:text="😠"
                        android:textSize="32sp"
                        android:layout_margin="8dp"
                        android:background="@drawable/mood_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>

                    <RadioButton
                        android:id="@+id/emojiLove"
                        android:text="🥰"
                        android:textSize="32sp"
                        android:layout_margin="8dp"
                        android:background="@drawable/mood_selector"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="12dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"/>
                </RadioGroup>

                <EditText
                    android:id="@+id/edtNote"
                    android:hint="Chia sẻ cảm xúc của bạn..."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp"/>

                <Button
                    android:id="@+id/btnSaveMood"
                    android:text="💾 Lưu Mood"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/button_primary"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:elevation="2dp"/>

                <TextView
                    android:id="@+id/txtMyMoodStatus"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="#7F8C8D"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Partner Mood Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardPartnerMood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF8E1">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtPartnerName"
                    android:text="Mood người yêu"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#F57C00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@drawable/ic_heart"
                    android:drawablePadding="8dp" />

                <TextView
                    android:id="@+id/txtPartnerMood"
                    android:text="Chưa có mood hôm nay"
                    android:textSize="24sp"
                    android:textColor="#E65100"
                    android:gravity="center"
                    android:minHeight="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/partner_mood_background"
                    android:padding="16dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- History Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E8F5E8">

            <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="📊 Lịch sử 7 ngày"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2E7D32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:text="Bạn | Người yêu"
                    android:textSize="12sp"
                    android:textColor="#66BB6A"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/txtHistory"
                    android:text="Đang tải lịch sử..."
                    android:textSize="16sp"
                    android:textColor="#1B5E20"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="monospace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
